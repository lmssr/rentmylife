
<h1 class="lifestyle_title">Pick a Lifestyle</h1>
<div class="box">
  <div class="cards">
    <% @lifestyles.each do |lifestyle| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www. chicagotribune.com/resizer/2la6Dr_2VZrmEtATWDKJ8Yn0ZLA=/800x533/top/arc-anglerfish-arc2-prod-tronc.s3.amazonaws.com/p  ublic/6QKTCV3XKFELDAIG7OSDD4DZYE.jpg)">
        <%= link_to lifestyle.name, lifestyle_path(lifestyle), class: "btn btn-primary" %> <%= "$#{lifestyle.price}" %>
      <div class="delete btn">
        <% if policy(lifestyle).destroy? %>
          <%= link_to "Delete", lifestyle_path(lifestyle),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>
      </div>
      <br>
    <% end %>
    <br>
  </div>



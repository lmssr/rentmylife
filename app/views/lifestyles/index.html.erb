
<h1 class="lifestyle_title">Pick a Lifestyle</h1>
<div class="box">
  <div class="cards">
    <% @lifestyles.each do |lifestyle| %>

      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path lifestyle.photo, height: 300, width: 400, crop: :fill %>')">
        <%= link_to lifestyle.name, lifestyle_path(lifestyle), class: "btn btn-primary" %>
        <span class="price_tag"><%= "$#{lifestyle.price}/day"%></span>

      <div class="delete btn">
        <% if policy(lifestyle).destroy? %>
          <%= link_to "Delete", lifestyle_path(lifestyle),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>
    </div>
      <br>
    <% end %>
    <br>
  </div>

  <div
  id="map"
  class="sticky-top !important"
  style="width: 100%;
  height: 100vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  >
  </div>
</div>





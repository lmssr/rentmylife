<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Rent Request</h1>
      <%= simple_form_for [@booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date%>
        <%= f.hidden_field :lifestyle_id, value: @lifestyle.id %>
        <%= f.submit "Confirm Booking", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
